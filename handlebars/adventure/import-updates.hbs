<form class="{{content.cssClass}}" autocomplete="off" onsubmit="event.preventDefault();">
  <div>
    <p class="notes">The following {{content.dataTypeDisplay}} data has updates available, please choose which ones you want to apply by ticking the corresponding checkbox.</p>
    <div>
      <div class="form-group">
        {{#each content.fileData}}
          {{#if this.flags.ddb.versions}}
            {{#if this.metaVersionChanged}}
              <label for="new_{{this._id}}">{{this.name}}&nbsp;version&nbsp;{{this.flags.ddb.versions.ddbMetaData}} (from: {{#if this.oldVersions.ddbMetaData}}{{this.oldVersions.ddbMetaData}}{{else}}unknown{{/if}})</label>
            {{else}}
              <label for="new_{{this._id}}">{{this.name}}&nbsp;version&nbsp;{{this.flags.ddb.versions.ddbMetaData}}&nbsp;<i class="fa fa-info" title="Changed versions:&#10;{{#if this.importerVersionChanged}}DDB-Importer {{this.flags.ddb.versions.ddbImporter}} (before: {{#if this.oldVersionsddb-importer}}{{this.oldVersions.ddbImporter}}{{else}}unknown{{/if}})&#10;{{/if}}{{#if this.muncherVersionChanged}}DDB Adventure Muncher {{this.flags.ddb.versions.adventureMuncher}} (before: {{#if this.oldVersions.adventureMuncher}}{{this.oldVersions.adventureMuncher}}{{else}}unknown{{/if}}){{/if}}"></i></label>
            {{/if}}
            <input id="new_{{this._id}}" name="new_{{this._id}}" type="checkbox" value="">
          {{/if}}
        {{/each}}
      </div>
    </div>
    <input type="hidden" name="type" value="{{content.dataType}}">
    <div class="dialog-buttons">
      <button class="dialog-button" data-button="confirm">
        <i class="fas fa-check"></i>
        {{localize "dbb-importer.adventure-import-confirm"}}
      </button>
    </div>
  </div>
</form>
